@model Bakers.Models.Order

<h4 style="margin-top: 20px; margin-bottom: 25px">Please enter your address.</h4>
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateOrder" style="display: flex; flex-direction: column; gap: 8px;">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Street" class="control-label"></label>
                <input asp-for="Street" class="form-control" />
                <span asp-validation-for="Street" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Zip" class="control-label"></label>
                <input asp-for="Zip" class="form-control" />
                <span asp-validation-for="Zip" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="City" class="control-label"></label>
                <input asp-for="City" class="form-control" />
                <span asp-validation-for="City" class="text-danger"></span>
            </div>
@*            <div class="form-group">
                <label asp-for="UserId" class="control-label"></label>
                <select asp-for="UserId" class="form-control" asp-items="ViewBag.UserId"></select>
            </div>
            <div class="form-group">
                <label asp-for="ProductIds" class="control-label"></label>
                <select asp-for="ProductIds" class="form-control" asp-items="ViewBag.Products"></select>
            </div>*@
            <div class="form-group">
                <input type="submit" value="Submit" class="btn btn-primary" style="border: none; border-radius: 4px; background-color: #DDB7B2; color: white; width: 100px" />
            </div>
        </form>
    </div>
</div>
