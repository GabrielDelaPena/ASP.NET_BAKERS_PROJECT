@model Bakers.Models.Variety

@{
    ViewData["Title"] = "Delete";
}

<h3 style="margin-top: 20px;">Are you sure you want to delete @Html.DisplayFor(model => model.Name)?</h3>
<div>
    <div class="row gx-5 mt-3">
        <div class="col-7"style="display: flex; flex-direction: column; gap: 10px;">
            <h5>Name : @Html.DisplayFor(model => model.Name)</h5>
            <h5>Products :</h5>
            <div style="display: flex; flex-wrap: wrap; gap: 8px;">
                @foreach (var product in Model.Products)
                {
                    <img src="@product.Image" height="80px" />
                }
            </div>
        </div>
    </div>
    
    <form asp-action="Delete" class="d-flex flex-column mt-5" style="width: 115px; gap: 10px">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" style="text-decoration: none; color: black; cursor: pointer;">⬅ Back to List</a>
    </form>
</div>
