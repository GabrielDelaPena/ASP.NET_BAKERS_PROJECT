@model IEnumerable<Bakers.Models.Product>

@{
    ViewData["Title"] = "Index";
}

<div id="carouselImages" class="carousel slide" data-bs-ride="true">
    <div class="carousel-indicators">
        <button type="button" data-bs-target="#carouselImages" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
        <button type="button" data-bs-target="#carouselImages" data-bs-slide-to="1" aria-label="Slide 2"></button>
        <button type="button" data-bs-target="#carouselImages" data-bs-slide-to="2" aria-label="Slide 3"></button>
    </div>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="~/Images/carousel2.jpg" class="d-block w-100" alt="Carousel image 1">
        </div>
        <div class="carousel-item">
            <img src="~/Images/carousel1.jpg" class="d-block w-100" alt="Carousel image 2">
        </div>
        <div class="carousel-item">
            <img src="~/Images/carousel3.jpg" class="d-block w-100" alt="Carousel image 3">
        </div>
    </div>
</div>

<div>
    <h4 class="text-center mt-5">Pies of the week</h4>
    <h5 class="text-center">Enjoy a weekly selection of our favorites pies</h5>
</div>

<form asp-action="Index" asp-controller="Products" style="margin: 50px auto 50px auto">
    Search:
    <input type="text" name="searchField" value=@ViewData["searchField"]></>
    <input type="submit" value="Filter" style="border: none; border-radius: 4px; background-color: #DDB7B2; color: white; width: 100px" />
</form>

<h2 style="text-align: center; margin-bottom: 30px;">@ViewData["NoProducts"]</h2>

<div class="row row-cols-1 row-cols-md-3 g-4">
@foreach (var item in Model) {
        <div class="col">
            <div class="card pie-card">
                <img src="@item.Image" class="card-img-top">
                <div class="card-body pie-button">
                    @if (User.IsInRole("admin") || User.IsInRole("user") || User.IsInRole("employee"))
                    {
                        <h4 class="d-grid">
                            <a asp-action="AddToCart" asp-route-name="@item.Name" class="btn btn-secondary" style="background-color: #DDB7B2; border: none;">Add to cart</a>
                        </h4>
                    }
                    <div class="mt-2" style="display: flex; flex-direction: column;">
                        <div class="d-flex justify-content-between">
                        <h2 class="text-start">
                            <a class="pie-link" style="text-decoration: none; color: #000000; cursor: pointer; font-size: 20px;" asp-action="Details" asp-route-id="@item.Id">@item.Name</a>
                        </h2>
                        <h5 class="text-end">
                            @item.Price €
                        </h5>
                        </div>
                        <h6>@item.Variety.Name</h6>
                        @if (User.IsInRole("admin") || User.IsInRole("employee"))
                        {
                            <div style="display: flex; justify-content: space-between; margin-top: 15px">
                            <a asp-action="Edit" asp-route-id="@item.Id" style="text-decoration: none; color: black; width: 80px;">✏ Edit</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" style="text-decoration: none; color: black; width: 80px;">❌ Delete</a>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@if (User.IsInRole("admin") || User.IsInRole("employee"))
{
    <p style="margin-top: 25px;">
        Wanna add new cake? 
        <a asp-action="Create" style="text-decoration: none; color: black; cursor: pointer;">Create New</a>
    </p>
}
