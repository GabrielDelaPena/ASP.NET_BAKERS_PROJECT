@model Bakers.Models.Product

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Product</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Image)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Image)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Favorite)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Favorite)
        </dd>
        
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Variety)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Variety.Name)
        </dd>

        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Orders)
        </dt>
        <dd class = "col-sm-10">
            @foreach (var order in Model.Orders)
            {
                @Html.DisplayFor(model => order.Id)<span>,</span>             
            }
        </dd>
    </dl>
</div>
<div>
    @if (User.IsInRole("admin")) {
   <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> 
    }
    <a asp-action="Index">Back to List</a>
</div>
